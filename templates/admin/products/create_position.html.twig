{% extends 'admin.html.twig' %}

{% block title %}{{ 'Add position' }}{% endblock %}

{% block body %}
     <h3>
         {{ 'Please drag and drop to reorder products' }}
     </h3>
    <ul id="sortable" data-action="{{ createOrderAction }}" class="list-group">
    {% for product in collection %}
        <li data-id="{{ product.id }}" class="list-group-item">
            {{ product.name }}
        </li>
    {% else %}
        {{ 'The are no products' }}
    {% endfor %}
    </ul>

{% endblock %}


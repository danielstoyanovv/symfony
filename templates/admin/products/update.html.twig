{% extends 'admin.html.twig' %}

{% block title %}{{ 'Update product' }}{% endblock %}

{% block body %}
    <h3>{{ 'Update product' }}</h3>
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>

        {% if product.image %}
            {% for image in product.image  %}
               <img src=" {{ get_product_image(image) }}" width="200px" />
            {% endfor %}
        {% endif %}

        <div class="mb-3">
            {{ form_row(form.submit, {'attr': {'class': 'form-control'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}


{% extends 'profile.html.twig' %}

{% block title %}{{ 'My voted songs' }}{% endblock %}

{% block body %}
    <h3>{{ "List with songs which I voted for" }}</h3>
    <ul class="list-group">
        {% for rate in rateData %}
            <li class="list-group-item">
                {{ rate.song.name|e }}

                {% if rate.song.author %}
                    ({{ rate.song.author }})
                {% endif %}

                - <b>{{ rate.rating}}</b>
            </li>
        {% else %}
            {{ 'The are no songs' }}
        {% endfor %}
    </ul>
{% endblock %}